<% @options.sort.map do |section, var_hash| -%>
<% if section.include? '.' -%>
<% section_arr = section.split('.') -%>
[<%= section_arr[0] %> "<%= section_arr[1] %>"]
<% else -%>
[<%= section %>]
<% end -%>
<% var_hash.sort.map do |var, val_hash_arr| -%>
<% if val_hash_arr.is_a? Array -%>
<% val_hash_arr.each do |val_hash| -%>
<% if val_hash['ensure'].nil? or val_hash['ensure'] != 'absent' -%>
	<%= var %> = <%= val_hash['value'] %>
<% end -%>
<% end -%>
<% else -%>
<% if val_hash_arr['ensure'].nil? or val_hash_arr['ensure'] != 'absent' -%>
	<%= var %> = <%= val_hash_arr['value'] %>
<% end -%>
<% end -%>
<% end -%>

<% end -%>
